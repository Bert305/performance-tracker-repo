doctype html
html
    head
        title Edit Tasks
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
        style.
            :root
                --padding-standard: 1rem;
                --margin-standard: 0.5rem;
            body
                background-color: #f8f9fa;
            .full-width
                width: 100%;
            .form-control, .form-select
                margin-top: var(--margin-standard);
                margin-bottom: var(--margin-standard);
            .form-label
                font-weight: bold;
            .btn-primary
                width: 100%;
                font-weight: bold;
            .container-custom
                padding: var(--padding-standard);
                margin-top: var(--margin-standard);
                border-radius: 10px;
                box-shadow: 0 4px 8px rgba(0,0,0,0.1);
                background-color: #fff;
    body
        .container.d-flex.align-items-center.justify-content-center.min-vh-100
            .row.w-100
                .col-md-6.d-flex.flex-column.align-items-center
                    .container-custom
                        h1.text-center Edit Tasks
                        form(action=`/edit-task-pug/${task._id}` method="post" class="full-width")
                            input(type="hidden" name="_method" value="PUT")
                            .mb-3
                                label(for="taskName" class="form-label") Update Task Name:
                                input(type="text" name="taskName" id="taskName" class="form-control full-width" required value=task.taskName)
                            .mb-3
                                label(for="description" class="form-label") Update Description:
                                textarea(name="description" id="description" class="form-control full-width" required)= task.description
                            .mb-3
                                label(for="currentStatus" class="form-label") Current Start Date:
                                input(type="text" id="currentStatus" class="form-control full-width" readonly value=(new Date(task.assignedDate).toLocaleString("en-US", { timeZone: "America/New_York" })))
                            .mb-3
                                label(for="startDate" class="form-label") Start Date:
                                input(type="date" name="startDate" id="startDate" class="form-control full-width" required value=task.assignedDate)
                            .mb-3
                                label(for="currentStatus" class="form-label") Current Due Date:
                                input(type="text" id="currentStatus" class="form-control full-width" readonly value=(new Date(task.dueDate).toLocaleString("en-US", { timeZone: "America/New_York" })))
                            .mb-3
                                label(for="endDate" class="form-label") Due Date:
                                input(type="date" name="endDate" id="endDate" class="form-control full-width" required value=task.dueDate)
                            .mb-3
                                label(for="currentComplexity" class="form-label") Current Complexity:
                                input(type="text" id="currentComplexity" class="form-control full-width" readonly value=task.complexity)
                            .mb-3
                                label(for="complexity" class="form-label") Update Complexity:
                                select(name="complexity" id="complexity" class="form-control full-width" required)
                                    option(value="1") 1
                                    option(value="2") 2
                                    option(value="3") 3
                                    option(value="4") 4
                                    option(value="5") 5
                                    option(value="6") 6
                                    option(value="7") 7
                                    option(value="8") 8
                            .mb-3
                                label(for="status" class="form-label") Status:
                                select(name="status" id="status" class="form-control full-width" required)
                                    option(value="todo") todo
                                    option(value="inProgress") inProgress
                                    option(value="done") done
                            .mb-3
                                label(for="currentStatus" class="form-label") Current Status:
                                input(type="text" id="currentStatus" class="form-control full-width" readonly value=task.status)
                            button(type="submit" class="btn btn-primary mt-3") Save Changes
                .col-md-6.d-flex.align-items-center.justify-content-center
                    img(src="https://images-wixmp-ed30a86b8c4ca887773594c2.wixmp.com/f/e6c34bba-090a-4178-b65e-81e7bfa65b5e/dfkobui-98b47e49-6c57-447b-9bd5-53a2cbc48e2a.jpg?token=eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9..4xUZoBbRtOWvP6AzO0Km_B_KWpb8_Kx4EhH6B7-_tAM" class="img-thumbnail w-100" alt="Task Image")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous")
