doctype html
html
    head
        title Edit Account
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
        style.
            .full-width {
                width: 100%;
            }
    body
        .container.d-flex.align-items-center.justify-content-center.min-vh-100
            .row.w-100
                .col-md-6.d-flex.flex-column.align-items-center
                    h1.text-center.mb-4 Edit your account
                    form(action="/edit-account-pug" method="post" class="full-width")
                        input(type="hidden" name="_method" value="PUT")
                        .mb-3
                            label(for="username" class="form-label") Username:
                            input(type="text" name="username" id="username" class="form-control full-width" value=user.username required)
                        .mb-3
                            label(for="firstName" class="form-label") First Name:
                            input(type="text" name="firstName" id="firstName" class="form-control full-width" value=user.firstName required)
                        .mb-3
                            label(for="lastName" class="form-label") Last Name:
                            input(type="text" name="lastName" id="lastName" class="form-control full-width" value=user.lastName required)
                        .mb-3
                            label(for="email" class="form-label") Email:
                            input(type="email" name="email" id="email" class="form-control full-width" value=user.email required)
                        .mb-3
                            label(for="role" class="form-label") Role:
                            select(name="role" id="role" class="form-control full-width" required)
                                option(value="user" selected=user.role=='user') user
                                option(value="admin" selected=user.role=='admin') admin
                        .d-grid.gap-2
                            button.btn.btn-primary(type="submit" class="full-width") Save Changes
                .col-md-6.d-flex.align-items-center.justify-content-center
                    img(src="https://www.figma.com/community/resource/effe05b5-b381-4319-94fd-25ddfca4c2b8/thumbnail" class="img-thumbnail w-100" alt="Placeholder Image")
