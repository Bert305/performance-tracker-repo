doctype html
html
  head
    title Login
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
    style.
      .full-width {
        width: 100%;
      }
  body
    .container.d-flex.align-items-center.justify-content-center.min-vh-100
      .row.w-100
        .col-12
          img(src="/uploads/logo.png" alt="Logo" class="img-fluid" style="max-width: 150px; margin-top: 10px;")
        .col-md-6.d-flex.flex-column.align-items-center
          h1.text-center.mb-4 Login to your account
          form(action="/login-pug" method="post" class="full-width" onsubmit="handleLogin(event)")
            div.mb-3
              label(for="username" class="form-label") Username:
              input(type="text" name="username" id="username" class="form-control full-width" required)
            div.mb-3
              label(for="password" class="form-label") Password:
              input(type="password" name="password" id="password" class="form-control full-width" required)
            .d-grid.gap-2
              button.btn(type="submit" class="full-width" style="background-color: #A9D9D0;") Sign in
              p.text-center.mt-3
                | Don't have an account? 
                a(href="/register-pug") Sign up
        .col-md-6.d-flex.align-items-center.justify-content-center
          img(src="/uploads/Rectangle27.png" class="img-thumbnail w-100" alt="")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous")

