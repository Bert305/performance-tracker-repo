doctype html
html
    head
        title Register
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
        link(href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet")
        style.
            .full-width {
                width: 100%;
            }
    body
        .container
            .row
                .col-12
                    img(src="/uploads/logo.png" alt="Logo" class="img-fluid" style="max-width: 150px; margin-top: 40px;")
        .container.d-flex.align-items-center.justify-content-center.min-vh-100
            .row.w-100
                .col-md-6.d-flex.flex-column.align-items-center
                    h1.text-center.mb-4(style="margin-top: -85px;") Register your account
                    form(action="/register-pug" method="post" enctype="multipart/form-data" class="full-width")
                        div.mb-3(style="margin-top: 0px;")
                            label(for="username" class="form-label") Username:
                            input(type="text" name="username" id="username" class="form-control full-width" required)
                        div.mb-3
                            label(for="email" class="form-label") Email:
                            input(type="email" name="email" id="email" class="form-control full-width" required)
                        div.mb-3
                            label(for="password" class="form-label") Password:
                            div.input-group
                                input(type="password" name="password" id="password" class="form-control full-width" required)
                                span.input-group-text
                                    i.fas.fa-eye(style="cursor: pointer;" id="togglePassword" onclick="togglePasswordVisibility()")
                        .d-grid.gap-2
                            button.btn(type="submit" class="full-width" style="background-color: #A9D9D0;") Register
                    p.text-center.mt-3
                        | Already have an account? 
                        a(href="/login-pug") Login
                .col-md-6.d-flex.align-items-center.justify-content-center
                    img(src="/uploads/Rectangle27.png" class="img-thumbnail w-100" alt="Rectangle Image" style="margin-top: -50px;")
script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous")
script.
    function togglePasswordVisibility() {
        var passwordInput = document.getElementById('password');
        var eyeIcon = document.getElementById('togglePassword');
        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';
            eyeIcon.classList.remove('fa-eye');
            eyeIcon.classList.add('fa-eye-slash');
        } else {
            passwordInput.type = 'password';
            eyeIcon.classList.remove('fa-eye-slash');
            eyeIcon.classList.add('fa-eye');
        }
    }





