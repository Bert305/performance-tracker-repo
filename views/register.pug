doctype html
html
    head
        title Register
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
        style.
            .full-width {
                width: 100%;
            }
    body
        .container.d-flex.align-items-center.justify-content-center.min-vh-100
            .row.w-100
                .col-md-6.d-flex.flex-column.align-items-center
                    h1.text-center.mb-4 Register your account
                    form(action="/register-pug" method="post" enctype="multipart/form-data" class="full-width")
                        div.mb-3
                            label(for="username" class="form-label") Username:
                            input(type="text" name="username" id="username" class="form-control full-width" required)
                        div.mb-3
                            label(for="firstName" class="form-label") First Name:
                            input(type="text" name="firstName" id="firstName" class="form-control full-width" required)
                        div.mb-3
                            label(for="lastName" class="form-label") Last Name:
                            input(type="text" name="lastName" id="lastName" class="form-control full-width" required)
                        div.mb-3
                            label(for="email" class="form-label") Email:
                            input(type="email" name="email" id="email" class="form-control full-width" required)
                        div.mb-3
                            label(for="image" class="form-label") Profile Image:
                            input(type="file" name="image" id="image" class="form-control full-width")
                        div.mb-3
                            label(for="role" class="form-label") Role:
                            select(name="role" id="role" class="form-control full-width" required)
                                option(value="user") user
                                option(value="admin") admin
                        div.mb-3
                            label(for="password" class="form-label") Password:
                            input(type="password" name="password" id="password" class="form-control full-width" required)
                        .d-grid.gap-2
                            button.btn.btn-primary(type="submit" class="full-width" onclick="window.location.href='/login-pug'") Register
                .col-md-6.d-flex.align-items-center.justify-content-center
                    img(src="https://images-wixmp-ed30a86b8c4ca887773594c2.wixmp.com/f/fcb36e8f-1bf0-4798-be15-1aab02921650/dfnkiti-c2cb1d66-33cc-4eff-980b-bfee56bad3ab.png?token=eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9..I_voA_t2D3yvVOvd3cFj2Ded-s1Mp0Ph9tlrN8dgRRg" class="img-thumbnail w-100" alt="Placeholder Image")
script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous")





