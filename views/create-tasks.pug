doctype html
html
    head
        title Create Tasks
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
        style.
            .full-width {
                width: 100%;
            }
    body
        .container.d-flex.align-items-center.justify-content-center.min-vh-100
            .row.w-100
                .col-md-6.d-flex.flex-column.align-items-center
                    h1.text-center.mb-4 Create Tasks
                    form(action="/create-tasks-pug" method="post" class="full-width")
                        .mb-3
                            label(for="taskName" class="form-label") Task Name:
                            input(type="text" name="taskName" id="taskName" class="form-control full-width" required)
                        .mb-3
                            label(for="description" class="form-label") Description:
                            textarea(name="description" id="description" class="form-control full-width" required)
                        .mb-3
                            label(for="startDate" class="form-label") Start Date:
                            input(type="date" name="startDate" id="startDate" class="form-control full-width" required)
                        .mb-3
                            label(for="endDate" class="form-label") End Date:
                            input(type="date" name="endDate" id="endDate" class="form-control full-width" required)
                        .mb-3
                            label(for="complexity" class="form-label") Complexity:
                            select(name="complexity" id="complexity" class="form-control full-width" required)
                                option(value="1") 1
                                option(value="2") 2
                                option(value="3") 3
                                option(value="4") 4
                                option(value="5") 5
                                option(value="6") 6
                                option(value="7") 7
                                option(value="8") 8
                        .mb-3
                            label(for="status" class="form-label") Status:
                            select(name="status" id="status" class="form-control full-width" required)
                                option(value="todo") todo
                                option(value="inProgress") inProgress
                                option(value="done") done
                        button(type="submit" class="btn btn-primary mt-3 full-width") Submit
                .col-md-6.d-flex.align-items-center.justify-content-center
                    img(src="https://wallpapers.com/images/hd/naruto-anime-sakura-floating-rocks-bljm3wkng19ctpqy.jpg" class="img-thumbnail w-100" alt="Task Image")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous")
